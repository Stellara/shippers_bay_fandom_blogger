<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @author.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @author.email %>
</p>

<div>
	<strong>Articles You Authored:</strong>
	<ul>
		<% @articles.each do |article| %>
			<li>
				<%= link_to article.title, article_path(article) %>
			</li>
		<% end %>
	</ul>
</div>

<%= link_to "Edit", edit_author_path %> 
<%= link_to "Delete Account", edit_author_path, method: :delete, data: {confirm: "Are you sure you want to delete your account? This action is permanent."} %>
<%= link_to "Back", root_path %>
